<div class="col-md-4 mx-auto">
	<div class="card">
		<div class="card-header">Edit note</div>
		<div class="card-body">
			<form action="/notes/edit-note/{{note.id}}?_method=PUT" method="POST">
				{{!--
				send a hidden input for method override to use PUT method
					- "_method" as it is set in app config (index.ts)
					- also a query was added to the form action "?..."
				--}}
				<input type="hidden" name="_method" value="PUT">
				<div class="form-group">
					<input type="text" name="title" id="title" class="form-control" placeholder="Title" value="{{note.title}}">
				</div>
				<div class="form-group">
					<textarea name="description" id="description" cols="23" rows="5">{{ note.description }}</textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block" type="submit">Save</button>
				</div>
			</form>
		</div>
	</div>
</div>